<%- include("../parts/html-head") %> <%- include("../parts/navbar") %>

<main class="main-content p-3">
  <div class="d-flex justify-content-between align-items-center">
    <!-- <h2 class="m-0 fs-5">
        <a class="fs-1" href="stores.php" style="text-decoration:none; color:black">Product</a>
    </h2> -->
    <h2 class="m-0">營地編輯</h2>

    <ul class="nav nav-underline fs-5">
      <li class="nav-item mx-3">
        <a class="nav-link text-success p-0" href="#">修改場地資料</a>
      </li>
      <li class="nav-item mx-3">
        <a class="nav-link text-warning p-0" href="#">修改場地資訊</a>
      </li>
      <li class="nav-item mx-3">
        <a class="nav-link text-warning p-0" href="#">修改空間數量</a>
      </li>
    </ul>
  </div>

  <hr />

  <!-- tags -->
  <div class="container">
    <div class="row">
      <div class="col">
        <form
          name="form2"
          onsubmit="sendTag()"
          class="border border-warning p-3 m-2"
        >
          <legend class="mb-3">增加標籤：</legend>

          <input type="hidden" id="stores_id" name="stores_id" value="" />
          <input type="hidden" id="tag_name" name="tag_name" value="" />
          <input
            type="radio"
            id=""
            name="tag_id"
            value=""
            class="form-check-input"
          />
          <label for="" class="form-check-label"></label>

          <br />
          <button type="submit" class="btn btn-primary mt-3">增加</button>
        </form>
      </div>
      <div class="col">
        <div class="border border-warning p-3 m-2">
          <legend>已擁有的標籤：</legend>

          <span class="m-2 p-1">
            <a class="text-decoration-none" href="#">X</a>
            <span></span>
          </span>
        </div>
      </div>
    </div>
  </div>

  <hr class="m-3" />

  <!-- form -->
  <form name="form1" onsubmit="sendData(event)" style="margin: 20px">
    <div class="pb-3">
      <label for="stores_id" class="form-label">場地編號</label>
      <input type="hidden" name="stores_id" value="<%= stores_id %>" />
      <input
        type="text"
        class="form-control"
        value="<%= stores_id %>"
        disabled
      />
    </div>

    <div class="pb-3">
      <label for="name" class="form-label">場地名稱</label>
      <input
        class="form-control"
        type="text"
        id="name"
        name="name"
        value="<%= name %>"
      />
    </div>

    <div class="pb-3">
      <label for="mobile" class="form-label">電話號碼</label>
      <input
        class="form-control"
        type="text"
        id="mobile"
        name="mobile"
        value="<%= mobile %>"
      />
    </div>

    <div class="pb-3">
      <label for="address" class="form-label">地址</label>
      <input
        class="form-control"
        type="text"
        id="address"
        name="address"
        value="<%= address %>"
      />
    </div>

    <div class="pb-3">
      <label for="longitude" class="form-label">經度</label>
      <input
        class="form-control"
        type="text"
        id="longitude"
        name="longitude"
        value="<%= longitude %>"
      />
    </div>

    <div class="pb-3">
      <label for="latitude" class="form-label">緯度</label>
      <input
        class="form-control"
        type="text"
        id="latitude"
        name="latitude"
        value="<%= latitude %>"
      />
    </div>

    <div class="pb-3">
      <label for="altitude" class="form-label">高度</label>
      <input
        class="form-control"
        type="text"
        id="altitude"
        name="altitude"
        value="<%= altitude %>"
      />
    </div>

    <div class="pb-3">
      <label for="precautions" class="form-label">注意事項</label>
      <textarea
        class="form-control"
        id="precautions"
        name="precautions"
        rows="3"
      >
<%= precautions %></textarea
      >
    </div>

    <div class="pb-3">
      <label for="introduction" class="form-label">場地簡介</label>
      <textarea
        class="form-control"
        id="introduction"
        name="introduction"
        rows="3"
      >
<%= introduction %></textarea
      >
    </div>

    <button type="submit" class="btn btn-primary">確定修改</button>
  </form>
</main>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
      <div class="modal-content">
          <div class="modal-header">
              <h1 class="modal-title fs-5" id="exampleModalLabel">資料編輯結果</h1>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
              <div class="alert alert-success" role="alert">
                  編輯成功
              </div>
          </div>
          <div class="modal-footer">
              <a href="/sales-panel/camp-list" class="btn btn-primary">OK</a>
          </div>
      </div>
  </div>
</div>

<div class="modal fade" id="exampleModa2" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
      <div class="modal-content">
          <div class="modal-header">
              <h1 class="modal-title fs-5" id="exampleModalLabe2">資料編輯結果</h1>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
              <div class="alert alert-danger" role="alert">
                  資料沒有編輯
              </div>
          </div>
          <div class="modal-footer">
              <a href="/sales-panel/camp-list-edit" class="btn btn-primary">OK</a>
          </div>
      </div>
  </div>
</div>

<%- include("../parts/scripts") %>

<script>
  const sendData = (e) => {
    e.preventDefault();

    //只有資料的表單物物件
    const fd = new FormData(document.form1);
    fetch("", {
      method: "PUT",
      body: fd, //預設'Content-Type: multipart/form-data'
    })
      .then((r) => r.json())
      .then((data) => {
        console.log(data);
        if (data.success) {
          // console.log("YES");
          myModal.show();
        } else {
          // console.log("NO");
          myModa2.show();
        }
      })
      .catch((error) => {
        console.log(`fetch() 發生錯誤, 回傳的 JSON 格式是錯的`);
        console.log(error);
      });
  };

  const myModal = new bootstrap.Modal("#exampleModal");
  const myModa2 = new bootstrap.Modal("#exampleModa2");
</script>

