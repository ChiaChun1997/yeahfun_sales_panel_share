<!-- d-flex 設定在容器上較好 -->
<header class="fixed-top d-flex justify-content-between">
  <a class="brand text-decoration-none text-white text-center fs-3 p-2" href="/">
    <div class="">
      <img src="/img/LOGO.png" style="width: auto; height: 42px" alt="" />
      YeahFun
    </div>
  </a>
  <div class="nav-item d-flex">
    <% if (session.sales) { %>
    <a class="text-decoration-none text-white p-3"
      ><%= session.sales.name %>營主，歡迎您</a
    >
    <a class="text-decoration-none text-white p-3" href="/logout">登出</a>
    <% } else { %>
    <a class="text-decoration-none text-white p-3" href="/login">登入</a>
    <% } %>
  </div>
</header>

<aside class="aside-content bg-light border-end position-fixed">
  <!-- 清單列表 -->
  <ul class="list-unstyled">
    <!-- a : d-block 讓超連結變為block元素，感應範圍變大，且可設定padding -->
    <li>
      <a class="text-decoration-none d-block mt-3 px-3 py-2" href="/sales-panel/camp-list"
        ><i class="fa-solid fa-tents me-2"></i>營地管理</a
      >
    </li>
    <li>
      <a class="text-decoration-none d-block mt-2 px-3 py-2" href="/sales-panel/order-list"
        ><i class="fa-solid fa-chart-line me-2"></i>查看訂單</a
      >
    </li>
    <li>
      <a class="text-decoration-none d-block mt-2 px-3 py-2" href=""
        ><i class="fa-solid fa-ticket me-2"></i>優惠券管理</a
      >
    </li>
    <li>
      <a class="text-decoration-none d-block mt-2 px-3 py-2" href=""
        ><i class="fa-solid fa-comments me-2"></i>評論管理</a
      >
    </li>
  </ul>
</aside>
